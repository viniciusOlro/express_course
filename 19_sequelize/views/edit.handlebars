<h1>Editando {{ user.name }}</h1>
<form action="/users/create" method="POST" class="form">
    <input type="hidden" value="{{user.id}}">
    <div class="form-control">
    <label for="name">Nome:</label>
    <input type="text" name="name" placeholder="Digite o nome do usuário" value="{{user.name}}">
    </div>
    <div class="form-control">
    <label for="occupation">Profissão:</label>
    <input type="text" name="occupation" placeholder="Digite a profissão" value="{{user.occupation}}">
    </div>
    <div class="form-control form-checkbox">
        {{#if user.newsletter}}
        <input type="checkbox" name="newsletter" checked>
        {{else}}
        <input type="checkbox" name="newsletter">
        {{/if}}
    <label for="newsletter">Enviar promoções?</label>
    </div>
    <input type="submit" value="Editar">
</form>
<h2>Endereços</h2>
<div class="adress-container">
    <form action="/address/create" method="post">
        <input type="hidden" value="{{user.id}}" name="UserId">
        <div class="form-control">
            <label for="street">Rua</label>
            <input type="text" name="street" placeholder="Rua...">
        <div class="form-control">
            <label for="street">Número</label>
            <input type="text" name="number" placeholder="Número...">
        </div>
        </div>
        <div class="form-control">
            <label for="city">Cidade</label>
            <input type="text" name="city" placeholder="Cidade...">
        </div>
        <input type="submit" value="Cadastrar">
    </form>
</div>
<div class="address-list">
    <h2>Lista de endereços:</h2>
    {{#each user.Addresses}}
        <p>#{{this.id}} - {{this.street}} - {{this.number}} - {{this.city}}</p>
        <form action="/address/delete" method="post">
            <input type="hidden" value="{{this.UserId}}" name="UserId">
            <input type="hidden" name="id" value="{{ this.id }}">
            <input type="submit" value="Excluir">
        </form>
    {{/each}}
  </div>